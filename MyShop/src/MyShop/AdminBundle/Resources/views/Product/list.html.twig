{% extends "@MyShopAdmin/layout.html.twig" %}
{% block body %}
    <a href="{{ path("my_shop_admin.product_add") }}"><h3>Добавить товар</h3></a>
    <table border="1">
        <tr>
            <td>Модель</td>
            <td>Категория</td>
            <td>Цена</td>
        </tr>
        {% for product in productList %}
            <tr>
                <td>{{ product.getModel() }}</td>
                <td>{{ product.getCategory().getName() }}</td>
                <td>{{ product.getPrice() }}</td>
                <td>
                    <a href="{{ path("my_shop_admin.product_delete", {id:product.id}) }}">Удалить</a>
                    <a href="{{ path("my_shop_admin.product_edit", {id:product.id}) }}">Редактировать</a></br>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}